@model vazs.server.Models.TSModel

@{
    ViewData["Title"] = "CreateTS";
}

<h1>Ваше ТЗ</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateTS" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Название</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Описание</label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreationDate" class="control-label">Дата создания</label>
                <input asp-for="CreationDate" class="form-control" />
                <span asp-validation-for="CreationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Deadline" class="control-label">Крайний срок</label>
                <input asp-for="Deadline" class="form-control" />
                <span asp-validation-for="Deadline" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Budget" class="control-label">Бюджет</label>
                <input asp-for="Budget" class="form-control" />
                <span asp-validation-for="Budget" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Document" class="control-label">Выберите файл для загрузки:</label>
                <input asp-for="Document" type="file" accept="application/*" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="ClientID" value=@User.FindFirst("clientUID").Value />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="DepartmentName" value="@ViewContext.RouteData.Values["DepartmentName"]" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary mt-2" onclick="createTS()">Создать ТЗ</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}