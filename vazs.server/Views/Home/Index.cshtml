@model IEnumerable<vazs.server.Models.Department>

@{
    ViewData["Title"] = "Index";
}

<style>
    .card {
        transition: transform 0.2s ease-in-out;
    }

        .card:hover {
            transform: scale(1.1);
        }
</style>

<h1 class="mb-4">Отделы разработки</h1>

<div class="row row-cols-1 row-cols-md-3">
    @foreach (var item in Model)
    {
        <div class="col mb-4">
            <div class="card" onmouseover="this.style.cursor='pointer';" onclick="location.href='@Url.Action("CreateTS", "TS", new { DepartmentName = item.Name })'">
                <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.Image)" class="w-100" asp-append-version="true">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                    <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                </div>
            </div>
        </div>
    }
</div>
